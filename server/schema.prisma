
datasource db {
  provider = "postgresql"
  // A URL do banco de dados é obtida da variável de ambiente "DATABASE_URL"
  url = env("DATABASE_URL")
}

// Define o generator que será utilizado para gerar o Prisma Client
generator client {
  provider = "prisma-client-js"
}

// Define o modelo do usuário
model User {
  // Define o campo "id" como a chave primária
  id        Int      @id @default(autoincrement())
  // Define o campo "email" como único
  email     String   @unique
  // Define o campo "password"
  password  String
}
